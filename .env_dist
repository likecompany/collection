# ========================================ENVIRONMENT========================================

# ======================================INTERFACE============================================
AUTH_BASE=http://auth_backend:8081/{method}
FILE_BASE=http://file_backend:8083/{method}
# ======================================INTERFACE============================================


# =========================================LOGGING===========================================
MAIN_LOGGER_NAME=like.company.poker.collection
LOGGING_LEVEL=DEBUG
# =========================================LOGGING===========================================

# ==========================================DOCKER===========================================
PYTHONPATH=app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
# ==========================================DOCKER===========================================

# =====================================FASTAPI & UVICORN=====================================
DEBUG=true
RELOAD=true
HOSTNAME=0.0.0.0
PORT=8084
DOCS_URL=/poker.collection.docs  # Optional
REDOC_URL=/poker.collection.redoc  # Optional
OPENAPI_URL=/poker.collection.openapi.json  # Optional
